<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="employee_data" resource="default" engine="innodb" comment="Employee Data">
        <column name="employee_id" comment="Employee ID" xsi:type="int" unsigned="true" nullable="false" identity="true"/>
        <column name="employee_name2" length="255" comment="Employee Name" xsi:type="varchar" nullable="false"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="employee_id"/>
        </constraint>
    </table>
</schema>
