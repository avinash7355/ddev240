<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="bv_tasks_component" resource="default" engine="innodb" comment="magento table1">
        <column xsi:type="int" name="entity_id" padding="7" unsigned="false" nullable="false" identity="true" comment="ID" />
        <column xsi:type="varchar" name="task_title" nullable="false" length="255"/>
        <column xsi:type="varchar" name="task_description" nullable="false" length="255"/>
        <column xsi:type="boolean" name="status" nullable="false"  />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id" />
        </constraint>
    </table>
</schema>

