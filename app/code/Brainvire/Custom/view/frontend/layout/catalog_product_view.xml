<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main">
            <block class="Magento\Catalog\Block\Product\View" name="product.attribute.product_temp_attribute" template="Magento_Catalog::product/view/attribute.phtml">
                <arguments>
                    <argument name="at_call" xsi:type="string">getproduct_temp_attribute</argument>
                    <argument name="at_code" xsi:type="string">product_temp_attribute</argument>
                    <argument name="at_label" xsi:type="string">product_temp_attribute</argument>
                    <argument name="css_class" xsi:type="string">itemprop="product_temp_attribute"</argument>
                </arguments>
            </block>
            
            <block class="Magento\Catalog\Block\Product\View\Attributes" name="product.attribute.product_checkbox_attribute" template="Magento_Catalog::product/view/attribute.phtml">
                <arguments>
                    <argument name="at_call" xsi:type="string">getproduct_checkbox_attribute</argument>
                    <argument name="at_code" xsi:type="string">product_checkbox_attribute</argument>
                    <argument name="at_label" xsi:type="string">product_checkbox_attribute</argument>
                    <argument name="css_class" xsi:type="string">itemprop="product_checkbox_attribute"</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>

