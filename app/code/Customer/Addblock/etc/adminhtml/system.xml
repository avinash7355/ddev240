<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="faq" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Frequently Asked Questions</label>
            <tab>general</tab>
            <resource>Training_Faq::config_faq</resource>
            <group id="frontend_settings" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Frontend Settings</label>
                <field id="visible_question_count" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Number of Visible Questions</label>
                    <validate>validate-number</validate>
                </field>
            </group>
        </section>
    </system>
</config>
